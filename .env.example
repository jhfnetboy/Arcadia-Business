# 运行模式
MODE="local" # local 或 prd

# 数据库连接 URL
DATABASE_URL_LOCAL="postgresql://username:password@localhost:5432/dbname"
DATABASE_URL_PRD="postgresql://username:password@production-host:5432/dbname"

# 设置实际使用的数据库 URL（会根据 MODE 自动选择）
DATABASE_URL=""

# Auth
AUTH_SECRET="your-auth-secret"
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"
AUTH_GITHUB_ID="your-github-client-id"
AUTH_GITHUB_SECRET="your-github-client-secret"
AUTH_DISCORD_ID="your-discord-client-id"
AUTH_DISCORD_SECRET="your-discord-client-secret"
AUTH_TWITTER_ID="your-twitter-client-id"
AUTH_TWITTER_SECRET="your-twitter-client-secret"
AUTH_REDDIT_ID="your-reddit-client-id"
AUTH_REDDIT_SECRET="your-reddit-client-secret"
AUTH_SLACK_ID="your-slack-client-id"
AUTH_SLACK_SECRET="your-slack-client-secret"
AUTH_COINBASE_ID="your-coinbase-client-id"
AUTH_COINBASE_SECRET="your-coinbase-client-secret"

# Storage
AUTH_KV_REST_API_URL="your-kv-api-url"
AUTH_KV_REST_API_TOKEN="your-kv-api-token"

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_KEY="your-google-maps-key"

# Other
NEXT_PUBLIC_APP_URL="http://localhost:3000"
AUTH_DEBUG="1" 